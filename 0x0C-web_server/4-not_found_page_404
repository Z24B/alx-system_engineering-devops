#!/usr/bin/env bash

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create a custom 404 error page with the required content
echo "Ceci n'est pas une page" > /usr/share/nginx/html/404.html

# Create a new Nginx server block for handling 404 errors
cat <<EOF > /etc/nginx/sites-available/custom_404
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }
}
EOF

# Enable the new server block
ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
service nginx restart > /dev/null 2>&1 || /etc/init.d/nginx restart > /dev/null 2>&1
