#!/usr/bin/env bash

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create a new Nginx server block for redirection
cat <<EOF > /etc/nginx/sites-available/redirect_me
server {
	listen 80;
	listen [::]:80;

	server_name _;

	location /redirect_me {
		return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
	}

	# Redirect all other requests to the default Nginx welcome page
	location / {
		return 301 /;
	}
}
EOF

# Enable the new server block
ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
service nginx restart > /dev/null 2>&1 || /etc/init.d/nginx restart > /dev/null 2>&1

